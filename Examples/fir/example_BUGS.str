


// What are the edges of StreamIt metaprog capability? 
// ------------------------------------------------------------

void->int filter nats_source()
{
  int var1 = 0;
  init {
    var1 = 0;
  }
  work push 1 {
    var1 = (var1 + 1);
    push(var1);
  }
}

int->void filter printer()
{
  work pop 1 {
    println(pop());
  }
}

